# Chrome Web Store API Configuration
# Copy this file to .env and fill in your actual values

# Your Chrome Extension ID (found in Chrome Web Store Developer Dashboard)
CHROME_EXTENSION_ID=your_extension_id_here

# Google Cloud Console OAuth2 credentials
CHROME_CLIENT_ID=your_client_id_here
CHROME_CLIENT_SECRET=your_client_secret_here

# OAuth2 refresh token (generated using the client credentials)
CHROME_REFRESH_TOKEN=your_refresh_token_here

# Auto-publish after upload (true/false)
# Set to false to upload but not publish (manual review)
AUTO_PUBLISH=false

# Optional: Build configuration
NODE_ENV=production
BUILD_TARGET=chrome-webstore

# Optional: Notification settings
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url 